{
  "manifest_version": 3,
  "name": "Per-Tab Audio Control",
  "version": "4.1.3",
  "description": "The audio controls browsers forgot to include",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "offscreen",
    "contextMenus",
    "tabCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-volume-control@example.com",
      "strict_min_version": "121.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/page-script.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options/options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self'; object-src 'self'"
  },
  "commands": {
    "volume-up": {
      "suggested_key": {
        "default": "Alt+Shift+Up"
      },
      "description": "Increase volume"
    },
    "volume-down": {
      "suggested_key": {
        "default": "Alt+Shift+Down"
      },
      "description": "Decrease volume"
    },
    "toggle-mute": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      },
      "description": "Toggle mute"
    }
  }
}
